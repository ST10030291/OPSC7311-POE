<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_background"
    tools:context=".FilterTasks">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/dark_background"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:layout_width="112dp"
            android:layout_height="110dp"
            android:layout_marginTop="-20dp"
            android:background="@color/dark_background"
            android:src="@drawable/time_compass_icon" />

        <TextView
            android:layout_width="242dp"
            android:layout_height="70dp"
            android:layout_marginStart="40dp"
            android:fontFamily="sans-serif"
            android:text="@string/filter_tasks"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- FAB -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabPopupTray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="176dp"
        android:importantForAccessibility="no"
        android:src="@drawable/plus_icon"
        android:layout_marginBottom="60dp"/>

    <!-- Bottom Navigation View -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/light_background"
        app:itemTextColor="@color/grey"
        app:menu="@menu/bottom_navigation_menu" />

    <!-- ScrollView -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomNavigationView"
        android:layout_below="@id/linearLayout2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/infolayout"
                android:layout_width="match_parent"
                android:layout_height="504dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/rounded_corners"
                android:backgroundTint="@color/blue">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="338dp"
                    android:layout_height="64dp"
                    android:text="@string/filter_task_by_specific_date_period"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="19dp" />

                <Button
                    android:id="@+id/savebutton"
                    android:layout_width="179dp"
                    android:layout_height="62dp"
                    android:layout_marginStart="108dp"
                    android:layout_marginBottom="16dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/dark_grey"
                    android:text="@string/search"
                    android:textColor="@color/black"
                    android:textSize="30sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:strokeColor="@color/black"
                    app:strokeWidth="4dp" />

                <Spinner
                    android:id="@+id/taskOption"
                    android:layout_width="256dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="40dp"
                    android:background="@drawable/inputbox"
                    android:entries="@array/categories"
                    android:paddingLeft="24dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.288" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="308dp"
                    android:layout_height="58dp"
                    android:text="@string/task_name"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:layout_editor_absoluteY="85dp"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="308dp"
                    android:layout_height="58dp"
                    android:text="@string/categories"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteY="201dp" />

                <Spinner
                    android:id="@+id/categoryOption"
                    android:layout_width="256dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="40dp"
                    android:background="@drawable/inputbox"
                    android:entries="@array/categories"
                    android:paddingLeft="24dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.539" />

                <EditText
                    android:id="@+id/startDate"
                    android:layout_width="156dp"
                    android:layout_height="53dp"
                    android:background="@drawable/inputbox"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:hint="@string/start_date"
                    android:paddingLeft="24dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    tools:layout_editor_absoluteX="31dp"
                    tools:layout_editor_absoluteY="341dp" />

                <EditText
                    android:id="@+id/endDate"
                    android:layout_width="156dp"
                    android:layout_height="53dp"
                    android:background="@drawable/inputbox"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:hint="@string/end_date"
                    android:paddingLeft="24dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    tools:layout_editor_absoluteX="201dp"
                    tools:layout_editor_absoluteY="341dp" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </ScrollView>


</RelativeLayout>